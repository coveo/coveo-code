{
    "name": "coveo-code",
    "displayName": "Coveo Code",
    "description": "Developer support for Coveo Search UI",
    "version": "0.0.1",
    "publisher": "coveo",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:html"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.showCoveoPreview",
                "title": "Show Preview of Coveo Components"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.showCoveoPreview",
                    "when": "resourceLangId == html"
                }
            ]
        }
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "prettier": "prettier --single-quote --print-width 120 --write 'src/**/*.ts'"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.68",
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "prettier": "^1.5.2",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "write": "^1.0.3"
    },
    "dependencies": {
        "coveo-search-ui": "^2.2900.14",
        "html-to-text": "^3.3.0",
        "lodash": "^4.17.4",
        "remove-markdown": "^0.1.0",
        "upndown": "^2.1.0",
        "vscode-html-languageservice": "^2.0.5"
    }
}
